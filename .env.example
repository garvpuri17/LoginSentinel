# LoginSentinel Environment Configuration
# Copy this file to .env and fill in your values

# Database Connection (Required)
# For local PostgreSQL: postgresql://username:password@localhost:5432/loginsentinel
# For Neon: Get from https://neon.tech dashboard
# For Supabase: Get from Settings â†’ Database
DATABASE_URL=postgresql://user:password@localhost:5432/loginsentinel

# JWT Secret Key (Required)
# Generate with: openssl rand -base64 32
# Or use any secure random string
SESSION_SECRET=your-super-secret-jwt-key-change-this-to-random-string

# Load Testing Mode (Optional)
# Set to 'true' to disable rate limiting for k6 load tests
# NEVER set this to true in production!
LOAD_TEST_MODE=false

# Node Environment (Optional)
# Automatically set by npm scripts
# NODE_ENV=development
